@model IEnumerable<WebApplication2.SoDauBai>

@{
    ViewBag.Title = "Index";
}

<h2>Sổ đầu bài</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Ngày
        </th>
        <th>
           Giảng viên
        </th>
        <th>
           Nội dung
        </th>
        <th>
           Nhận xét
        </th>
        <th>
           Đề xuất
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.Ngay.ToString("dd/MM/yyyy")
        </td>
        <td>
           <a href="#">@item.GiangVien</a>
        </td>
        <td>
            <mark>@item.Noidung</mark>
        </td>
        <td>
            <mark>@item.DeXuat</mark>
        </td>
        <td>
            <mark>@item.NhanXet</mark>
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Details", "Details", new { id=item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
